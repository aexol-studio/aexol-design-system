{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es6",
    "jsx": "react",
    "module": "es6",
    "allowJs": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "experimentalDecorators": true,
    "declaration": false,
    "removeComments": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "./lib",
    "lib": ["es6", "es7", "dom"],
    "baseUrl": "src"
  },
  "exclude": ["lib", "node_modules", "sandbox", "docs"]
}
